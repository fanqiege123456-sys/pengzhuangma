/* pages/edit-collision-code/edit-collision-code.wxss */
.container {
  min-height: 100vh;
  background: #E8F1FA;
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #5B9FE8 0%, #4A90D9 40%, #3D7AC7 100%);
  padding: 40rpx 30rpx;
  position: relative;
  overflow: hidden;
}

.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -60rpx;
  right: -40rpx;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  bottom: -50rpx;
  left: -30rpx;
}

.header-content {
  text-align: center;
  position: relative;
  z-index: 1;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 12rpx;
  color: #fff;
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 表单容器 */
.form-container {
  padding: 20rpx;
}

/* 表单区块 */
.form-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx 28rpx; /* 增加上下内边距 */
  margin-bottom: 20rpx; /* 增加底部间距 */
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 表单项 */
.form-item {
  position: relative;
}

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx 80rpx 24rpx 20rpx; /* 右侧留出更多空间给计数器 */
  background: #F8FAFC;
  border: 1rpx solid #E8EEF3;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  min-height: 80rpx; /* 确保输入框有足够的高度 */
  line-height: 1.4; /* 改善文字行高 */
}

.form-input:focus {
  border-color: #4A90D9;
  background: #fff;
}

.input-counter {
  position: absolute;
  right: 20rpx;
  top: 50%; /* 垂直居中 */
  transform: translateY(-50%);
  font-size: 22rpx;
  color: #C0C4CC;
  z-index: 2; /* 确保计数器在输入框之上 */
}

/* 选择器 */
.form-picker {
  width: 100%;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 20rpx;
  background: #F8FAFC;
  border: 1rpx solid #E8EEF3;
  border-radius: 12rpx;
  min-height: 80rpx; /* 确保选择器有足够的高度 */
  box-sizing: border-box;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  flex: 1; /* 让文字占据更多空间 */
  line-height: 1.4;
}

.picker-arrow {
  font-size: 24rpx;
  color: #C0C4CC;
  transform: rotate(90deg);
  margin-left: 16rpx; /* 给箭头留出一些间距 */
}

/* 费用信息 */
.cost-info {
  background: #F0F7FF;
  border: 1rpx solid #D6E8FA;
  border-radius: 12rpx;
  padding: 28rpx 24rpx; /* 增加上下内边距 */
}

.cost-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx; /* 增加底部间距 */
}

.cost-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #4A90D9;
}

.cost-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #4A90D9;
}

.cost-desc {
  text-align: center;
  padding-top: 8rpx; /* 增加顶部间距 */
}

.cost-desc-text {
  font-size: 24rpx;
  color: #8E9AAB;
  line-height: 1.4;
}

/* 提交区域 */
.submit-section {
  padding: 20rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn::after {
  border: none;
}

.submit-btn.active {
  background: linear-gradient(180deg, #5A9FE8 0%, #4A90D9 50%, #3A7BC8 100%);
  color: #fff;
  box-shadow: 
    0 6rpx 0 #2E6AB5,
    0 8rpx 16rpx rgba(74, 144, 217, 0.4);
}

.submit-btn.disabled {
  background: #F5F7FA;
  color: #C0C4CC;
  box-shadow: none;
}

/* 修改说明 */
.tips-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin: 16rpx 20rpx 0;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.tips-item {
  font-size: 24rpx;
  color: #8E9AAB;
  line-height: 1.8;
  display: block;
  margin-bottom: 8rpx;
}

.tips-item:last-child {
  margin-bottom: 0;
}