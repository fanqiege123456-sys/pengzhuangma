/* pages/settings/settings.wxss */
.settings-container {
  padding: 30rpx;
  background-color: #E8F1FA;
  min-height: 100vh;
  padding-bottom: 60rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 30rpx;
  background: linear-gradient(180deg, #5A9FE8 0%, #4A90D9 100%);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 217, 0.3);
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #F0F4F8;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  border: 1rpx solid #E8EEF3;
  border-radius: 12rpx;
  padding: 0 24rpx;
  background: #F8FAFC;
}

.address-text {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  color: #C0C4CC;
  font-size: 28rpx;
}

.tips {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #F0F7FF;
  border-radius: 12rpx;
  border-left: 4rpx solid #4A90D9;
}

.tips-text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.tips-text:last-child {
  margin-bottom: 0;
}

/* 开关项 */
.switch-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F0F4F8;
}

.form-item:last-child .switch-item {
  border-bottom: none;
}

.switch-info {
  flex: 1;
  margin-right: 24rpx;
}

.switch-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.switch-desc {
  display: block;
  font-size: 24rpx;
  color: #8E9AAB;
  line-height: 1.5;
}

/* 帮助说明 */
.help-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.help-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #F0F4F8;
}

.help-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.help-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.help-number {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  background: #4A90D9;
  color: #fff;
  border-radius: 50%;
  font-size: 22rpx;
  font-weight: 600;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.help-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  flex: 1;
}

/* 按钮样式 */
.save-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(180deg, #5A9FE8 0%, #4A90D9 50%, #3A7BC8 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 
    0 6rpx 0 #2E6AB5,
    0 8rpx 16rpx rgba(74, 144, 217, 0.4);
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn:active {
  transform: translateY(4rpx);
  box-shadow: 
    0 2rpx 0 #2E6AB5,
    0 4rpx 8rpx rgba(74, 144, 217, 0.3);
}

.debug-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(180deg, #9B7FD9 0%, #8B6FC9 50%, #7B5FB9 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 
    0 6rpx 0 #6B4FA9,
    0 8rpx 16rpx rgba(139, 111, 201, 0.4);
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.debug-btn:active {
  transform: translateY(4rpx);
  box-shadow: 
    0 2rpx 0 #6B4FA9,
    0 4rpx 8rpx rgba(139, 111, 201, 0.3);
}

.logout-btn {
  width: 100%;
  height: 96rpx;
  background: #fff;
  color: #F56C6C;
  border: 2rpx solid #F56C6C;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logout-btn:active {
  background: #FEF0F0;
  transform: translateY(2rpx);
}

/* 邮箱状态提示 */
.email-status {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  background: #FFF7E6;
  border-radius: 10rpx;
  margin-top: 16rpx;
}

.email-tip {
  font-size: 24rpx;
  color: #D48806;
}

.email-link {
  font-size: 24rpx;
  color: #4A90D9;
  font-weight: 500;
}
