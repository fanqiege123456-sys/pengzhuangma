/**pages/location-edit/location-edit.wxss**/
.container {
  min-height: 100vh;
  background: #E8F1FA;
  padding: 20rpx;
}

.form-section {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.form-item {
  display: flex;
  align-items: center;
  padding: 28rpx;
  border-bottom: 1rpx solid #F0F4F8;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  width: 140rpx;
  flex-shrink: 0;
}

/* 标签选择器 */
.label-selector {
  flex: 1;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.label-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  padding: 16rpx 8rpx;
  border: 1rpx solid #E8EEF3;
  border-radius: 12rpx;
  background: #F8FAFC;
}

.label-option.active {
  border-color: #4A90D9;
  background: #F0F7FF;
}

.label-icon {
  font-size: 36rpx;
}

.label-name {
  font-size: 22rpx;
  color: #8E9AAB;
}

.label-option.active .label-name {
  color: #4A90D9;
  font-weight: 500;
}

/* 选择器 */
.picker-display {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
}

.picker-arrow {
  font-size: 26rpx;
  color: #C0C4CC;
}

/* 开关 */
switch {
  transform: scale(0.9);
}

/* 按钮 */
.button-section {
  padding: 20rpx 0;
}

.save-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(180deg, #5A9FE8 0%, #4A90D9 50%, #3A7BC8 100%);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 
    0 6rpx 0 #2E6AB5,
    0 8rpx 16rpx rgba(74, 144, 217, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn:active {
  transform: translateY(4rpx);
  box-shadow: 
    0 2rpx 0 #2E6AB5,
    0 4rpx 8rpx rgba(74, 144, 217, 0.3);
}
