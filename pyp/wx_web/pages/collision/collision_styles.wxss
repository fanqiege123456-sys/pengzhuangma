/* pages/collision/collision.wxss */
.collision-container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 我的地区设置 */
.my-location-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.location-display {
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.location-text {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
}

.location-visible-option {
  display: flex;
  align-items: flex-start;
  gap: 15rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f0f9ff;
  border-radius: 12rpx;
}

.option-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.edit-location-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}

/* 输入区域 */
.input-section,
.gender-section,
.search-location-section,
.cost-section,
.hot-tags-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.collision-input {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.collision-input:focus {
  border-color: #667eea;
  background: white;
}

/* 性别选择 */
.gender-options {
  display: flex;
  gap: 40rpx;
  margin-bottom: 20rpx;
}

.gender-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  height: 88rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333;
  background: #fafafa;
  transition: all 0.3s;
}

.gender-item.checked {
  border-color: #667eea;
  background: #f0f9ff;
  color: #667eea;
}

.gender-tip {
  font-size: 24rpx;
  color: #999;
  padding: 10rpx 0;
}

/* 搜索地区选择 */
.picker-button {
  width: 100%;
  height: 100rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  background: #fafafa;
  font-size: 30rpx;
  color: #333;
}

.arrow {
  color: #999;
  font-size: 36rpx;
}

.location-tip {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff7e6;
  border-left: 4rpx solid #fa8c16;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

.tip-highlight {
  display: block;
  margin-top: 10rpx;
  color: #fa8c16;
  font-weight: bold;
}

/* 消耗积分 */
.cost-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.cost-label {
  font-size: 30rpx;
  color: #666;
}

.cost-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #fa8c16;
}

.cost-unit {
  font-size: 30rpx;
  color: #666;
}

/* 开始碰撞按钮 */
.collision-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: linear-gradient(135deg, #fa8c16 0%, #ff6b6b 100%);
  color: white;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  border: none;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(250, 140, 22, 0.3);
}

.collision-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 海底捞 */
.haidilao-section {
  background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.haidilao-info {
  margin-bottom: 30rpx;
}

.haidilao-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #d63031;
  margin-bottom: 15rpx;
}

.haidilao-desc {
  display: block;
  font-size: 28rpx;
  color: #2d3436;
  margin-bottom: 10rpx;
}

.haidilao-cost {
  display: block;
  font-size: 26rpx;
  color: #636e72;
}

.haidilao-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #d63031 0%, #e17055 100%);
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

/* 热门标签 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag-item {
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #a29bfe 0%, #6c5ce7 100%);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.tag-text {
  font-size: 28rpx;
  color: white;
  font-weight: bold;
}

.tag-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}
