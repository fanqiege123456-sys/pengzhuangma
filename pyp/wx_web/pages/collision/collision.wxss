/* pages/collision/collision.wxss */
.container {
  min-height: 100vh;
  background: #E8F1FA;
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #5B9FE8 0%, #4A90D9 40%, #3D7AC7 100%);
  padding: 40rpx 30rpx;
  position: relative;
  overflow: hidden;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -60rpx;
  right: -40rpx;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  top: 80rpx;
  left: -50rpx;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  bottom: 20rpx;
  right: 80rpx;
  background: rgba(255, 255, 255, 0.08);
}

.header-content {
  text-align: center;
  position: relative;
  z-index: 1;
}

.title {
  font-size: 44rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 12rpx;
  color: #fff;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.15);
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 卡片通用 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

/* 关键词输入 */
.keyword-card {
  padding-bottom: 24rpx;
}

.keyword-input {
  width: 100%;
  height: 96rpx;
  border: 2rpx solid #E8EEF3;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  background: #F8FAFC;
}

.keyword-input:focus {
  border-color: #4A90D9;
  background: #fff;
}

/* 输入框震动动画 */
.keyword-input.shake-animation {
  animation: shake 0.6s ease-in-out;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-3rpx); }
  20%, 40%, 60%, 80% { transform: translateX(3rpx); }
}

/* 热门标签 */
.hot-tags-section {
  margin-top: 24rpx;
}

.hot-tags-label {
  font-size: 26rpx;
  color: #8E9AAB;
  display: block;
  margin-bottom: 14rpx;
}

.hot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 14rpx;
}

.hot-tag {
  background: linear-gradient(135deg, #FF9500 0%, #FF7A00 100%);
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.hot-tag:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 消耗积分卡片 */
.cost-card {
  background: linear-gradient(135deg, #FFF8E6 0%, #FFF1CC 100%);
  border-radius: 16rpx;
  padding: 24rpx 28rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #FAECD8;
}

.cost-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 10rpx;
}

.cost-label {
  font-size: 28rpx;
  color: #8B6914;
}

.cost-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #E6A23C;
}

.cost-tip {
  font-size: 24rpx;
  color: #A68A3A;
}

/* 审核说明卡片 */
.audit-rule-card {
  background: #F0F7FF;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #D6E8FA;
}

.audit-rule-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #4A90D9;
  margin-bottom: 10rpx;
}

.audit-rule-content {
  font-size: 24rpx;
  color: #5A8AC7;
  line-height: 1.6;
}

/* 发起碰撞按钮 */
.action-section {
  margin-bottom: 20rpx;
}

.collision-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(180deg, #5A9FE8 0%, #4A90D9 50%, #3A7BC8 100%);
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 
    0 6rpx 0 #2E6AB5,
    0 8rpx 16rpx rgba(74, 144, 217, 0.4);
}

.collision-btn:active {
  transform: translateY(4rpx);
  box-shadow: 
    0 2rpx 0 #2E6AB5,
    0 4rpx 8rpx rgba(74, 144, 217, 0.3);
}

/* 使用说明 */
.tips-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 14rpx;
}

.tip-num {
  width: 36rpx;
  height: 36rpx;
  background: #4A90D9;
  color: #fff;
  border-radius: 50%;
  font-size: 22rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  flex: 1;
}
