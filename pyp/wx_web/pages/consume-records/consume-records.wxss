/* pages/consume-records/consume-records.wxss */
.container {
  min-height: 100vh;
  background: #E8F1FA;
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #5B9FE8 0%, #4A90D9 40%, #3D7AC7 100%);
  padding: 40rpx 30rpx;
  position: relative;
  overflow: hidden;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -60rpx;
  right: -40rpx;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  bottom: -50rpx;
  left: -30rpx;
}

.header-content {
  text-align: center;
  position: relative;
  z-index: 1;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 12rpx;
  color: #fff;
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* Tab切换 */
.tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  background: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.tab.active {
  background: #4A90D9;
  color: #fff;
  font-weight: 600;
}

/* 记录列表区域 */
.records-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.records-scroll {
  height: calc(100vh - 420rpx);
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 单条记录 */
.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #F8FAFC;
  border-radius: 12rpx;
}

.record-item.consume {
  border-left: 6rpx solid #F56C6C;
}

.record-item.recharge {
  border-left: 6rpx solid #52C41A;
}

.record-item.refund {
  border-left: 6rpx solid #52C41A;
  background: #F6FFED;
}

.record-left {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  flex: 1;
}

.record-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  flex-shrink: 0;
}

.record-icon.consume {
  background: #FEF0F0;
  color: #F56C6C;
}

.record-icon.recharge {
  background: #E6F7E6;
  color: #52C41A;
}

.record-icon.refund {
  background: #E6F7E6;
  color: #52C41A;
}

.record-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  flex: 1;
}

.record-reason {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.record-time {
  font-size: 24rpx;
  color: #8E9AAB;
}

.record-order {
  font-size: 22rpx;
  color: #C0C4CC;
}

.record-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 6rpx;
}

.record-coins {
  font-size: 32rpx;
  font-weight: 700;
}

.record-coins.consume {
  color: #F56C6C;
}

.record-coins.recharge {
  color: #52C41A;
}

.record-coins.refund {
  color: #52C41A;
}

.record-type {
  font-size: 22rpx;
  color: #8E9AAB;
}

.record-type.refund-type {
  color: #52C41A;
  font-weight: 500;
}

.record-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.record-status.success {
  background: #E6F7E6;
  color: #52C41A;
}

.record-status.pending {
  background: #FFF8E6;
  color: #E6A23C;
}

.record-status.failed {
  background: #FEF0F0;
  color: #F56C6C;
}

/* 加载更多 */
.load-more {
  padding: 30rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #8E9AAB;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #8E9AAB;
}
