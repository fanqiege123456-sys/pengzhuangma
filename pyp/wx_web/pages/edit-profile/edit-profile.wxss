/**pages/edit-profile/edit-profile.wxss**/
.container {
  min-height: 100vh;
  background: #E8F1FA;
  padding: 20rpx;
}

.form-section {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.form-item {
  display: flex;
  align-items: center;
  padding: 28rpx;
  border-bottom: 1rpx solid #F0F4F8;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item-column {
  flex-direction: column;
  align-items: flex-start;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  width: 140rpx;
  flex-shrink: 0;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

.form-input::placeholder {
  color: #C0C4CC;
}

/* 性别选择器 */
.gender-selector {
  flex: 1;
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

.gender-option {
  padding: 12rpx 28rpx;
  border: 1rpx solid #E8EEF3;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #666;
  background: #F8FAFC;
}

.gender-option.active {
  background: #4A90D9;
  border-color: #4A90D9;
  color: #fff;
}

/* 选择器 */
.picker-display {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  flex: 1;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
}

.picker-arrow {
  font-size: 26rpx;
  color: #C0C4CC;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 180rpx;
  font-size: 28rpx;
  color: #333;
  margin-top: 16rpx;
  padding: 20rpx;
  background: #F8FAFC;
  border: 1rpx solid #E8EEF3;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.form-textarea::placeholder {
  color: #C0C4CC;
}

.char-count {
  align-self: flex-end;
  font-size: 24rpx;
  color: #8E9AAB;
  margin-top: 10rpx;
}

/* 按钮区域 */
.button-section {
  padding: 20rpx 0;
}

.save-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(180deg, #5A9FE8 0%, #4A90D9 50%, #3A7BC8 100%);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 
    0 6rpx 0 #2E6AB5,
    0 8rpx 16rpx rgba(74, 144, 217, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn:active {
  transform: translateY(4rpx);
  box-shadow: 
    0 2rpx 0 #2E6AB5,
    0 4rpx 8rpx rgba(74, 144, 217, 0.3);
}
