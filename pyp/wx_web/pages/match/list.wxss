/* pages/match/list.wxss */
page {
  background-color: #f5f5f5;
  height: 100vh;
}

.match-list-container {
  padding: 20rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 匹配列表 */
.matches-list {
  padding-bottom: 20rpx;
}

.match-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.match-header {
  display: flex;
  margin-bottom: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.match-info {
  flex: 1;
}

.partner-info {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 15rpx;
}

.status-badge {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.status-matched {
  background: #e8f5e9;
  color: #4caf50;
}

.status-friend_added {
  background: #fff3e0;
  color: #ff9800;
}

.status-missed {
  background: #ffebee;
  color: #f44336;
}

.match-tag {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.match-location {
  font-size: 24rpx;
  color: #999;
}

/* 时间信息 */
.match-footer {
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.time-info,
.deadline-info {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.time-label,
.deadline-label {
  color: #bbb;
}

.deadline-value {
  color: #ff9800;
  font-weight: bold;
}

.deadline-value.expired {
  color: #f44336;
}

/* 操作按钮 */
.match-actions {
  display: flex;
  gap: 20rpx;
}

.btn-copy,
.btn-force {
  flex: 1;
  padding: 20rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
}

.btn-copy {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.btn-force {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

.added-tip {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  color: #4caf50;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
}
