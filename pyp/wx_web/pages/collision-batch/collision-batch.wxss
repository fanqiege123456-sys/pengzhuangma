/**pages/collision-batch/collision-batch.wxss**/
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 160rpx;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 30rpx 40rpx;
  color: #fff;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
  display: block;
}

/* 区块标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

/* 条件设置区 */
.settings-section {
  background: #fff;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.input {
  width: 100%;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 性别选项 */
.gender-options {
  display: flex;
  gap: 20rpx;
}

.gender-item {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  background: #f8f8f8;
  border-radius: 8rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  font-size: 28rpx;
}

.gender-item.active {
  background: #e3f2fd;
  border-color: #007AFF;
  color: #007AFF;
  font-weight: bold;
}

/* 年龄范围 */
.age-range {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.age-input {
  flex: 1;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
}

.separator {
  font-size: 28rpx;
  color: #999;
}

.unit {
  font-size: 26rpx;
  color: #999;
}

/* 地址选择区 */
.locations-section {
  background: #fff;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.select-all {
  font-size: 26rpx;
}

.select-all label {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.locations-list {
  margin-top: 20rpx;
}

.location-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.location-item:last-child {
  margin-bottom: 0;
}

.location-info {
  flex: 1;
  margin-left: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.location-label {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.label-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: #007AFF;
  color: #fff;
  font-size: 22rpx;
  border-radius: 4rpx;
  width: fit-content;
}

.location-text {
  font-size: 26rpx;
  color: #333;
}

.default-tag {
  padding: 4rpx 12rpx;
  background: #ff9800;
  color: #fff;
  font-size: 22rpx;
  border-radius: 4rpx;
}

.add-location-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-top: 20rpx;
  padding: 24rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  color: #007AFF;
  font-size: 28rpx;
}

.plus-icon {
  font-size: 32rpx;
  font-weight: bold;
}

/* 组合列表区 */
.combinations-section {
  background: #fff;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.cost-info {
  font-size: 26rpx;
  color: #ff5722;
  font-weight: bold;
}

.combinations-list {
  margin-top: 20rpx;
}

.combination-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.combination-item:last-child {
  margin-bottom: 0;
}

.combination-info {
  flex: 1;
}

.info-row {
  margin-bottom: 8rpx;
  font-size: 26rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #999;
  margin-right: 8rpx;
}

.info-value {
  color: #333;
}

.delete-btn {
  padding: 8rpx 20rpx;
  background: #ff5722;
  color: #fff;
  font-size: 24rpx;
  border-radius: 8rpx;
  margin-left: 16rpx;
}

/* 底部操作区 */
.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.generate-btn, .submit-btn {
  flex: 1;
  padding: 28rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  border: none;
}

.generate-btn {
  background: #fff;
  color: #007AFF;
  border: 2rpx solid #007AFF;
}

.submit-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.submit-btn[disabled] {
  background: #ddd;
  color: #999;
}
