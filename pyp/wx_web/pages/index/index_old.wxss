/**pages/index/index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.scrollarea {
  flex: 1;
  overflow-anchor: none;
}

.welcome-card {
  text-align: center;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.welcome-message {
  font-size: 36rpx;
  font-weight: bold;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.collision-input {
  margin-bottom: 20rpx;
}

.collisions-list {
  margin-bottom: 20rpx;
}

.collision-item {
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.collision-item:last-child {
  border-bottom: none;
}

.collision-info {
  flex: 1;
}

.collision-type {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.collision-time {
  font-size: 24rpx;
  color: #999;
}

.collision-partner {
  font-size: 28rpx;
  color: #666;
  margin: 0 20rpx;
}

.collision-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status-matched {
  background-color: #e7f5e7;
  color: #52c41a;
}

.status-pending {
  background-color: #fff7e6;
  color: #fa8c16;
}

.more-btn {
  text-align: center;
  padding: 20rpx;
  color: #1890ff;
  font-size: 28rpx;
  border-top: 1rpx solid #f0f0f0;
}

.quick-actions {
  display: flex;
  justify-content: center;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background: none;
  border: none;
  margin: 0;
}

.action-btn::after {
  border: none;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.action-text {
  font-size: 28rpx;
  color: #333;
}
