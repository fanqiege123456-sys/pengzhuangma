/* pages/index/index.wxss */
.scrollarea {
  height: 100vh;
  width: 100%;
}

.index-container {
  min-height: 100vh;
  background: #E8F1FA;
  padding: 30rpx;
}

/* 页面标题 */
.page-title-section {
  text-align: center;
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #4A90D9;
  text-shadow: 0 2rpx 4rpx rgba(74, 144, 217, 0.2);
}

/* 搜索框区域 */
.search-section {
  margin-bottom: 36rpx;
}

.search-box {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: #fff;
  border-radius: 44rpx;
  padding: 10rpx 16rpx 10rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #E8EEF3;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  padding: 16rpx 0;
  color: #333;
}

.search-btn {
  background: #4A90D9;
  color: #fff;
  border-radius: 36rpx;
  padding: 16rpx 40rpx;
  font-size: 26rpx;
  border: none;
  line-height: 1.2;
  min-width: 0 !important;
  width: auto !important;
}

.search-btn::after {
  border: none;
}

/* 搜索框震动动画 */
.shake-animation {
  animation: shake 0.6s ease-in-out;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-3rpx); }
  20%, 40%, 60%, 80% { transform: translateX(3rpx); }
}

/* 热门区域 */
.hot-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.section-tip {
  font-size: 24rpx;
  color: #8E9AAB;
}

.hot-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.hot-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #F8FAFC;
  border-radius: 12rpx;
}

.hot-item:active {
  background: #F0F7FF;
}

.rank-badge {
  min-width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  background: #4A90D9;
  color: #fff;
  border-radius: 50%;
  font-size: 22rpx;
  font-weight: 600;
}

.rank-badge.rank-1 {
  background: #FFB800;
}

.rank-badge.rank-2 {
  background: #A8B8C8;
}

.rank-badge.rank-3 {
  background: #C9A86C;
}

.keyword {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.count {
  font-size: 24rpx;
  color: #8E9AAB;
}

.empty-tip {
  text-align: center;
  padding: 48rpx 0;
  font-size: 28rpx;
  color: #8E9AAB;
}

/* 使用提示 */
.usage-tips {
  margin-top: 32rpx;
}

.tip-card {
  background: #4A90D9;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.tip-icon {
  font-size: 52rpx;
}

.tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.tip-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 8rpx;
}

.tip-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
}

.login-guide-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 36rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.guide-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 28rpx;
}

.login-btn-primary {
  background: #4A90D9;
  color: #fff;
  border-radius: 44rpx;
  padding: 26rpx 56rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
}

.login-btn-primary::after {
  border: none;
}


/* 碰撞列表区域 */
.collision-list-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.collision-list-scroll {
  height: 320rpx;
}

.collision-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.collision-list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #F8FAFC;
  border-radius: 12rpx;
  border-left: 6rpx solid #4A90D9;
}

/* 审核状态样式 */
.collision-list-item.audit-pending {
  border-left-color: #E6A23C;
  background: #FFFBF0;
}

.collision-list-item.audit-rejected {
  border-left-color: #F56C6C;
  background: #FFF5F5;
}

.collision-list-item.expired {
  border-left-color: #C0C4CC;
  opacity: 0.8;
}

.collision-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.collision-keyword {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.collision-expire {
  font-size: 24rpx;
  color: #8E9AAB;
}

.collision-expire.audit-pending-text {
  color: #E6A23C;
}

.collision-expire.audit-rejected-text {
  color: #F56C6C;
}

/* 状态小标签 */
.status-tag-small {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-weight: 500;
}

.status-tag-small.audit-pending {
  background: #FFF8E6;
  color: #E6A23C;
}

.status-tag-small.audit-rejected {
  background: #FDECEA;
  color: #F56C6C;
}

.collision-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn-edit {
  background: #F0F7FF;
  color: #4A90D9;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 16rpx;
  text-align: center;
  border: 1rpx solid #D6E8FA;
}

.action-btn-edit::after {
  border: none;
}

.empty-list {
  text-align: center;
  padding: 32rpx 0;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #8E9AAB;
  margin-bottom: 8rpx;
}

.empty-tip-small {
  display: block;
  font-size: 24rpx;
  color: #C0C4CC;
}

/* 碰撞结果区域 */
.collision-result-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.result-list-scroll {
  max-height: 280rpx;
}

.result-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #F8FAFC;
  border-radius: 12rpx;
}

.result-item:active {
  background: #F0F7FF;
}

.result-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.result-keyword {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.result-count {
  font-size: 24rpx;
  color: #4A90D9;
}

.result-arrow {
  font-size: 32rpx;
  color: #C0C4CC;
}

.empty-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0;
}

.empty-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  background: #F0F4F8;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.empty-search-icon {
  font-size: 48rpx;
}

.empty-title {
  font-size: 30rpx;
  color: #4A90D9;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #8E9AAB;
  text-align: center;
}
