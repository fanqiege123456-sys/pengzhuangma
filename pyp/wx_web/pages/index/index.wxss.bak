/**pages/index/index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.scrollarea {
  flex: 1;
  overflow-anchor: none;
}

.container {
  padding: 20rpx;
}

.card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 游客模式样式 */
/* 欢迎横幅 */
.welcome-banner {
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 50rpx 40rpx;
}

.banner-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.banner-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 功能介绍 */
.feature-intro {
  padding: 40rpx 30rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.feature-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.feature-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.feature-content {
  flex: 1;
}

.feature-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 登录引导 */
.login-guide {
  text-align: center;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

.guide-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.login-btn-primary {
  width: 80%;
  background: white;
  color: #f5576c;
  border-radius: 50rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  margin: 0 auto;
}

.login-btn-primary::after {
  border: none;
}

/* 登录提示卡片（已登录后不显示）*/
.login-prompt {
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 60rpx 40rpx;
}

.prompt-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.prompt-desc {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.login-btn {
  background: white;
  color: #667eea;
  border-radius: 50rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.login-btn::after {
  border: none;
}

.login-tip {
  margin-top: 20rpx;
  font-size: 24rpx;
  opacity: 0.8;
}

/* 欢迎卡片 */
.welcome-card {
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.welcome-message {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.user-info {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.3);
}

.info-item {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

.info-item .label {
  opacity: 0.9;
}

.info-item .value {
  margin-left: 10rpx;
  font-weight: bold;
  font-size: 32rpx;
}

/* 快速操作 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.quick-actions {
  display: flex;
  justify-content: space-around;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 16rpx;
  border: none;
}

.action-btn:active {
  opacity: 0.8;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.action-text {
  font-size: 26rpx;
  color: #333;
}

/* 匹配记录列表 */
.collisions-list {
  margin-bottom: 20rpx;
}

.collision-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.collision-item:last-child {
  border-bottom: none;
}

.collision-header {
  display: flex;
  align-items: center;
  flex: 1;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.collision-info {
  flex: 1;
}

.partner-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.collision-tag {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 6rpx;
}

.collision-time {
  font-size: 22rpx;
  color: #bbb;
}

.collision-status {
  margin-left: 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.status-matched {
  background: #e8f5e9;
  color: #4caf50;
}

.status-friend_added {
  background: #fff3e0;
  color: #ff9800;
}

.status-pending {
  background: #f3e5f5;
  color: #9c27b0;
}

.more-btn {
  text-align: center;
  color: #667eea;
  font-size: 28rpx;
  padding: 20rpx 0;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 30rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.mt-20 {
  margin-top: 20rpx;
}
