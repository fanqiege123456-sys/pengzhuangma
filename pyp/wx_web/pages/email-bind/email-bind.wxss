/* pages/email-bind/email-bind.wxss */
.email-bind-container {
  min-height: 100vh;
  background: #E8F1FA;
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 说明卡片 */
.info-card {
  background: linear-gradient(135deg, #5B9FE8 0%, #4A90D9 40%, #3D7AC7 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 217, 0.3);
  display: flex;
  gap: 24rpx;
}

.info-icon {
  font-size: 60rpx;
  flex-shrink: 0;
}

.info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.info-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
}

/* 绑定表单 */
.bind-form {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-wrapper {
  width: 100%;
  background: #F8FAFC;
  border: 2rpx solid #E8EEF3;
  border-radius: 16rpx;
  overflow: hidden;
}

.input-wrapper:focus-within {
  background: #fff;
  border-color: #4A90D9;
}

.form-input {
  width: 100%;
  height: 96rpx;
  padding: 0 28rpx;
  font-size: 30rpx;
  color: #333;
  background: transparent;
  box-sizing: border-box;
}

.input-placeholder {
  color: #C0C4CC;
  font-size: 30rpx;
}

.verify-input-box {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.verify-input-wrapper {
  flex: 1;
}

.send-code-btn {
  padding: 28rpx 32rpx;
  background: linear-gradient(180deg, #5A9FE8 0%, #4A90D9 50%, #3A7BC8 100%);
  color: #fff;
  border-radius: 16rpx;
  font-size: 26rpx;
  white-space: nowrap;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 0 #2E6AB5;
}

.send-code-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 0 #2E6AB5;
}

.send-code-btn.disabled {
  background: #C0C4CC;
  box-shadow: 0 4rpx 0 #909399;
}

.form-tip {
  margin-top: -10rpx;
  margin-bottom: 20rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #52C41A;
  line-height: 1.5;
}

.bind-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(180deg, #5A9FE8 0%, #4A90D9 50%, #3A7BC8 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 0 #2E6AB5;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bind-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 0 #2E6AB5;
}

.privacy-tip {
  text-align: center;
  font-size: 24rpx;
  color: #8E9AAB;
}

.privacy-tip .link {
  color: #4A90D9;
}

/* 已绑定邮箱 */
.current-email {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.current-label {
  font-size: 26rpx;
  color: #8E9AAB;
  margin-bottom: 16rpx;
}

.current-value {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.current-value text:first-child {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.verified-badge {
  padding: 6rpx 16rpx;
  background: #E6F7E6;
  color: #52C41A;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.change-btn {
  width: 100%;
  height: 88rpx;
  background: #F0F7FF;
  color: #4A90D9;
  border: 2rpx solid #D6E8FA;
  border-radius: 44rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.change-btn:active {
  opacity: 0.9;
  background: #E6F0FA;
}
