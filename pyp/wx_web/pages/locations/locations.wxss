/**pages/locations/locations.wxss**/
.container {
  min-height: 100vh;
  background: #E8F1FA;
  padding: 20rpx;
  padding-bottom: 160rpx;
}

.locations-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.location-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.location-item.default {
  border: 1rpx solid #4A90D9;
  background: #FAFCFF;
}

.location-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.location-label {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.label-icon {
  font-size: 32rpx;
}

.label-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.default-badge {
  background: #4A90D9;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-left: 8rpx;
}

.location-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  font-size: 26rpx;
  color: #4A90D9;
  padding: 6rpx 12rpx;
}

.action-btn.delete {
  color: #F56C6C;
}

.location-address {
  font-size: 26rpx;
  color: #8E9AAB;
  line-height: 1.6;
}

.location-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 16rpx;
  margin-top: 16rpx;
  border-top: 1rpx solid #F0F4F8;
}

.set-default-btn {
  background: #F0F7FF;
  color: #4A90D9;
  border: 1rpx solid #D6E8FA;
  font-size: 24rpx;
  padding: 10rpx 24rpx;
  border-radius: 16rpx;
  line-height: 1.4;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #8E9AAB;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #C0C4CC;
}

/* 添加按钮 */
.add-button-wrapper {
  position: fixed;
  bottom: 40rpx;
  left: 20rpx;
  right: 20rpx;
}

.add-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(180deg, #5A9FE8 0%, #4A90D9 50%, #3A7BC8 100%);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 
    0 6rpx 0 #2E6AB5,
    0 8rpx 16rpx rgba(74, 144, 217, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.add-icon {
  font-size: 36rpx;
  font-weight: 500;
}

.add-btn:active {
  transform: translateY(4rpx);
  box-shadow: 
    0 2rpx 0 #2E6AB5,
    0 4rpx 8rpx rgba(74, 144, 217, 0.3);
}
