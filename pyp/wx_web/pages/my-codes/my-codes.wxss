/**pages/my-codes/my-codes.wxss**/
.container {
  min-height: 100vh;
  background: #E8F1FA;
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  text-align: center;
  padding: 40rpx 30rpx;
  background: linear-gradient(180deg, #5A9FE8 0%, #4A90D9 100%);
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 217, 0.3);
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 统计信息 */
.stats-section {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.stat-value.matched {
  color: #52C41A;
}

.stat-value.active-color {
  color: #4A90D9;
}

.stat-value.audit-pending-color {
  color: #E6A23C;
}

.stat-value.expired {
  color: #8E9AAB;
}

.stat-label {
  font-size: 22rpx;
  color: #8E9AAB;
}

.stat-divider {
  width: 1rpx;
  height: 50rpx;
  background: #E8EEF3;
}

/* 筛选标签滚动 */
.filter-scroll {
  white-space: nowrap;
  margin-bottom: 20rpx;
}

.filter-tabs {
  display: inline-flex;
  gap: 12rpx;
  padding: 4rpx 0;
}

.filter-tab {
  flex-shrink: 0;
  text-align: center;
  padding: 16rpx 24rpx;
  background: #fff;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.filter-tab.active {
  background: #4A90D9;
  color: #fff;
  font-weight: 500;
}

.tab-badge {
  background: #F56C6C;
  color: #fff;
  font-size: 18rpx;
  padding: 2rpx 10rpx;
  border-radius: 16rpx;
  min-width: 32rpx;
  text-align: center;
}

.tab-badge.rejected {
  background: #F56C6C;
}

/* 碰撞码列表 */
.codes-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.codes-scroll {
  height: 800rpx;
}

.codes-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.code-item {
  padding: 20rpx;
  background: #F8FAFC;
  border-radius: 12rpx;
  border-left: 6rpx solid #4A90D9;
}

.code-item.audit-pending {
  border-left-color: #E6A23C;
  background: #FFFBF0;
}

.code-item.audit-rejected {
  border-left-color: #F56C6C;
  background: #FFF5F5;
}

.code-item.matched {
  border-left-color: #52C41A;
}

.code-item.expired {
  border-left-color: #C0C4CC;
  opacity: 0.8;
}

.code-item.active {
  border-left-color: #4A90D9;
}

.code-main {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.code-left {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  flex: 1;
}

.code-icon {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.code-icon.matched {
  background: #E6F7E6;
  color: #52C41A;
}

.code-icon.active {
  background: #F0F7FF;
  color: #4A90D9;
}

.code-icon.expired {
  background: #F0F0F0;
  color: #8E9AAB;
}

.code-icon.audit-pending {
  background: #FFF8E6;
  color: #E6A23C;
}

.code-icon.audit-rejected {
  background: #FDECEA;
  color: #F56C6C;
}

.code-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.code-keyword {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.code-time {
  font-size: 22rpx;
  color: #4A90D9;
}

.code-time.audit-pending-text {
  color: #E6A23C;
}

.code-time.rejected-text {
  color: #F56C6C;
}

.code-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 6rpx;
}

/* 状态标签 */
.status-tag {
  font-size: 22rpx;
  padding: 6rpx 14rpx;
  border-radius: 16rpx;
  font-weight: 500;
}

.status-tag.matched {
  background: #E6F7E6;
  color: #52C41A;
}

.status-tag.active {
  background: #F0F7FF;
  color: #4A90D9;
}

.status-tag.expired {
  background: #F0F0F0;
  color: #8E9AAB;
}

.status-tag.audit-pending {
  background: #FFF8E6;
  color: #E6A23C;
}

.status-tag.audit-rejected {
  background: #FDECEA;
  color: #F56C6C;
}

.match-count {
  font-size: 20rpx;
  color: #52C41A;
}

.code-cost {
  font-size: 20rpx;
  color: #8E9AAB;
}

/* 审核信息区域 */
.audit-info-box {
  margin-top: 14rpx;
  padding: 14rpx 16rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.audit-info-box.pending {
  background: #FFF8E6;
}

.audit-info-box.rejected {
  background: #FDECEA;
}

.audit-info-box.approved {
  background: #E6F7E6;
}

.audit-info-content {
  display: flex;
  align-items: flex-start;
  gap: 10rpx;
  flex: 1;
}

.audit-info-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.audit-info-detail {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.audit-info-text {
  font-size: 24rpx;
  line-height: 1.4;
}

.audit-info-box.pending .audit-info-text {
  color: #E6A23C;
}

.audit-info-box.rejected .audit-info-text {
  color: #F56C6C;
  font-weight: 500;
}

.audit-info-box.approved .audit-info-text {
  color: #52C41A;
}

.audit-info-reason {
  font-size: 22rpx;
  color: #F56C6C;
  line-height: 1.4;
}

.audit-refund-tip {
  font-size: 22rpx;
  color: #52C41A;
  line-height: 1.4;
  margin-top: 4rpx;
}

.audit-info-arrow {
  font-size: 24rpx;
  color: #C0C4CC;
}

/* 操作按钮 */
.code-actions {
  display: flex;
  justify-content: flex-end;
  gap: 12rpx;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #E8EEF3;
}

.action-btn {
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
}

.view-btn {
  background: #52C41A;
  color: #fff;
}

.recollision-btn {
  background: #FF9500;
  color: #fff;
}

.resubmit-btn {
  background: linear-gradient(135deg, #FF9500 0%, #FF7A00 100%);
  color: #fff;
}

.waiting-btn {
  background: #F0F7FF;
  color: #4A90D9;
  border: 1rpx solid #D6E8FA;
}

.waiting-btn.audit {
  background: #FFF8E6;
  color: #E6A23C;
  border: 1rpx solid #FAECD8;
}

.renew-btn {
  background: #F0F7FF;
  color: #4A90D9;
  border: 1rpx solid #D6E8FA;
}

.delete-btn {
  background: #F0F4F8;
  color: #909399;
}

.edit-btn {
  background: #F0F7FF;
  color: #4A90D9;
  border: 1rpx solid #D6E8FA;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #8E9AAB;
  margin-bottom: 32rpx;
}

.empty-btn {
  background: linear-gradient(180deg, #5A9FE8 0%, #4A90D9 50%, #3A7BC8 100%);
  color: #fff;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 
    0 6rpx 0 #2E6AB5,
    0 8rpx 16rpx rgba(74, 144, 217, 0.4);
}

.empty-btn:active {
  transform: translateY(4rpx);
  box-shadow: 
    0 2rpx 0 #2E6AB5,
    0 4rpx 8rpx rgba(74, 144, 217, 0.3);
}
