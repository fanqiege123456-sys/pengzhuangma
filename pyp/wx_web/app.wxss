/**app.wxss**/
page {
  background-color: #F8FAFC;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.btn-primary {
  background: #4A90D9;
  color: #ffffff;
  border: none;
  border-radius: 44rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  line-height: 1.4;
}

.btn-primary:active {
  background: #3A7BC8;
}

.btn-secondary {
  background-color: #F0F7FF;
  color: #4A90D9;
  border: none;
  border-radius: 44rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  line-height: 1.4;
}

.btn-secondary:active {
  background-color: #E0EFFF;
}

.input {
  background-color: #F8FAFC;
  border: 1rpx solid #E8EEF3;
  border-radius: 12rpx;
  padding: 28rpx 20rpx;
  font-size: 32rpx;
  width: 100%;
  height: 100rpx;
  line-height: 44rpx;
  box-sizing: border-box;
}

.text-primary {
  color: #4A90D9;
}

.text-secondary {
  color: #8E9AAB;
}

.text-center {
  text-align: center;
}

.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.justify-center {
  justify-content: center;
}

.align-center {
  align-items: center;
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.ml-20 {
  margin-left: 20rpx;
}

.mr-20 {
  margin-right: 20rpx;
}

.p-20 {
  padding: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.collision-code {
  background: #4A90D9;
  color: white;
  padding: 20rpx 30rpx;
  border-radius: 44rpx;
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin: 20rpx 0;
}
